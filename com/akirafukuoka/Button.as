package com.akirafukuoka {	import flash.display.Sprite;	import flash.text.TextField;	import flash.events.MouseEvent;	import flash.text.TextFormat;		public class Button extends Sprite {				var _bg:Sprite = new Sprite();		var _label:TextField = new TextField();		var _func:Function;				var _green:Number = 0x38dc7c;				public function Button(width:Number, height:Number, label:String, func:Function) {			// constructor code			_func = func;			_bg.graphics.beginFill(_green);			_bg.graphics.drawRect(0,0,width,height);						var format:TextFormat = new TextFormat();			format.color = 0xFFFFFF;			format.font = "Avenir Next Bold";			format.size = 24;						_label.defaultTextFormat = format;			_label.text = label;			_label.autoSize = "left";			_label.x = Math.round((_bg.width- _label.width)*0.5);			_label.y = Math.round((_bg.height- _label.height)*0.5);									addChild(_bg);			addChild(_label);			buttonMode = true;			addEventListener(MouseEvent.ROLL_OVER,onRollOver);			addEventListener(MouseEvent.CLICK,onClick);					}		private function onRollOver(event:MouseEvent=null):void{			addEventListener(MouseEvent.ROLL_OUT,onRollOut);			_bg.alpha = 0.5;		}		private function onRollOut(event:MouseEvent=null):void{			removeEventListener(MouseEvent.ROLL_OUT,onRollOut);			_bg.alpha = 1;		}		private function onClick(event:MouseEvent=null):void{			_func();		}	}	}