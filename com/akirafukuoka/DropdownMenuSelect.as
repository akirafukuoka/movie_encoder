package com.akirafukuoka {	import flash.display.Sprite;	import flash.text.TextField;	import flash.events.MouseEvent;	import flash.text.TextFormat;		public class DropdownMenuSelect extends Sprite {				var _bg:Sprite = new Sprite();		var _arrow:Sprite = new Sprite();		var _labelTF:TextField = new TextField();		var _func:Function;				var _label:String = "";		var _value:* = "";				var _selects:Sprite = new Sprite();				var _green:Number = 0x38dc7c;				public function DropdownMenuSelect(width:Number, height:Number, label:String,value:*, func:Function) {			// constructor code						_label = label;			_value = value;			_func = func;			_bg.graphics.beginFill(0xFFFFFF);			_bg.graphics.drawRect(0,0,width,height);									var format:TextFormat = new TextFormat();			format.color = _green;			format.font = "Avenir Next Bold";			format.size = 24;						_labelTF.defaultTextFormat = format;			_labelTF.text = label;			_labelTF.autoSize = "left";			_labelTF.x = 10;			_labelTF.y = Math.round((_bg.height- _labelTF.height)*0.5);									addChild(_bg);			addChild(_labelTF);			buttonMode = true;			addEventListener(MouseEvent.ROLL_OVER,onRollOver);			addEventListener(MouseEvent.CLICK,onClick);					}		public function get value():* {			return _value;		}		public function get label():String {			return _label;		}		private function onRollOver(event:MouseEvent=null):void{			addEventListener(MouseEvent.ROLL_OUT,onRollOut);			_bg.alpha = 0.9;		}		private function onRollOut(event:MouseEvent=null):void{			removeEventListener(MouseEvent.ROLL_OUT,onRollOut);			_bg.alpha = 1;		}		private function onClick(event:MouseEvent=null):void{			_func(this);		}					}	}