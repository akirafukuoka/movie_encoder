package com.akirafukuoka {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.events.MouseEvent;		public class Input extends Sprite {				var _green:Number = 0x38dc7c;				var _bg:Sprite = new Sprite();		var _label:TextField = new TextField();		var _func:Function;		var _txt:TextField = new TextField();				public function Input(width:Number, label:String, str:String) {			var h:Number = 60;			// constructor code			_bg.graphics.lineStyle (1, _green, 1.0);			//_bg.graphics.beginFill(0x00FF33);			_bg.graphics.drawRect(0,0,width,h);									var format_label:TextFormat = new TextFormat();			format_label.color = 0xF6F6F6;			format_label.font = "Avenir Next Bold";			format_label.size = 24;			_label.defaultTextFormat = format_label;			_label.text = "A";			_label.autoSize = "left";			_label.x = 5;			_label.y = Math.round((_bg.height- _label.height)*0.5);			_label.text = label;						var format:TextFormat = new TextFormat();			format.color = _green;			format.font = "Avenir Next Bold";			format.size = 24;			format.align = "right"						_txt.defaultTextFormat = format;			_txt.text = "A";			_txt.autoSize = "right";			_txt.textColor = _green;			_txt.width = width-10;						_txt.x = width-5-_txt.width;			_txt.y = Math.round((h-_txt.height)*0.5);			_txt.type = "input";			_txt.text = str;									addChild(_bg);			addChild(_label);			addChild(_txt);					}		public function set text(str:String):void{			_txt.text = str;		}		public function get text():String{			return _txt.text;		}	}	}